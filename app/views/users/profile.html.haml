.container
  %h2 Profile
  %form
    .form-group
      %label{:for => "usr"} Name:
      %input.form-control{:type => "text", :value => "#{current_user.name}"}/
    .form-group
      %label{:for => "pwd"} Email:
      %input.form-control{:type => "text", :value => "#{current_user.email}"}/
    .form-group
      %label{:for => "pwd"} Avatar:
      %img{:alt => "avatar", :height => "100", :src => "#{current_user.avatar}", :width => "100"}/
